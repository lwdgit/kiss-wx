/* pages/common/markdown.wxss */

@font-face {
  font-family: octicons-link;
  src: url(data:font/woff;charset=utf-8;base64,) format('woff');
}

.markdown_wrapper{
	margin:10px 0;
	font-size:32rpx;
	line-height: 1.8em;
	-webkit-text-size-adjust: 100%;
  line-height: 1.5;
  color: #24292e;
  font-family: -apple-system, system-ui, BlinkMacSystemFont, "Segoe UI", Helvetica, Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol";
  line-height: 1.5;
  word-wrap: break-word
}
.markdown_block_h1{
	font-size:40rpx;
	text-align: center;
	margin-bottom:1em;
}
.markdown_block_h2{
	font-size:40rpx;
	padding-bottom:.5em;
	margin-top:1em;
	margin-bottom:1em;
	border-bottom:1px solid #f0f0f0;
}
.markdown_block_h3{
	font-size:36rpx;
}
.markdown_block_h4,
.markdown_block_h5,
.markdown_block_h6{
	font-weight: bold;
}
.markdown_block_p{
	margin-top:1em;
	margin-bottom:1em;
}
.markdown_block_video{
	margin-top:1em;
	margin-bottom:1em;
	width:100%;
}
.markdown_block_blockquote_p{
	margin-top:1em;
	margin-bottom:1em;
	padding:10px 0 10px 1em;
	font-size:28rpx;
	background:#f0f0f0;
	border-left:5px solid #e0e0e0;
}
.markdown_block_ul_li_p::before{
	content:'• ';
}
.markdown_block_ul_li_ul_li_p::before,
.markdown_block_ol_li_ul_li_p::before{
	content:'◦ ';
}
.markdown_block_ul_li_ul_li_p,
.markdown_block_ul_li_ol_li_p,
.markdown_block_ol_li_ul_li_p,
.markdown_block_ol_li_ol_li_p{
	padding-left: 1em;
}
.markdown_block_ul_li_p:last{
	margin-bottom:1em;
}
.markdown_block_code{
	padding:10px;
	font-size:28rpx;
	line-height: 1.5em;
	border:1px solid #f0f0f0;
	    white-space: pre-wrap;
    word-wrap: break-word;
}
.markdown_block_table_tr{
	display: flex;
	border-right:1px solid #e0e0e0;
	border-bottom:1px solid #e0e0e0;
}
.markdown_inline_table_th,
.markdown_inline_table_td{
	flex:1;
	padding:5px;
	font-size:28rpx;
	border-left:1px solid #e0e0e0;
	word-break: break-all;
}
.markdown_inline_table_td:last{
	border-top:1px solid #e0e0e0;
}
.markdown_inline_table_th{
	background:#f0f0f0;
	border-top:1px solid #e0e0e0;
}
.markdown_inline_strong{
	font-weight: bold;
	padding:0 5px;
}
.markdown_inline_em{
	font-style: italic;
	padding:0 5px;
}
.markdown_inline_deleted{
	text-decoration: line-through;
	padding:0 5px;
}
.markdown_inline_image{
	width:auto;
	height:auto;
}
.markdown_inline_code{
	background:#f0f0f0;
	padding:3px 5px;
}
